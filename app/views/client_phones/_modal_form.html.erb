<%= form_for [:client, phone], remote: true do |f| %>
  <div class="modal-body">
    <%= render "shared/form_validation_errors", model: phone %>
    
    <div class="field full">
      <%= f.label :number, "My phone" %>
      <%= f.text_field :number %>
    </div>
  </div>

  <footer>
    <%= image_submit_tag "modal/save_btn.png" %>
    <%= link_to image_tag("modal/cancel_btn.png"), "#", class: "close-button" %>
  </footer>
<% end %>