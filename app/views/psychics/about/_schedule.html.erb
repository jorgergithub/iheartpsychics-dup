<article class="psychic-schedule">
  <h1>My Schedule for the Week of <b><%= Date.today.strftime("%B %d, %Y") %></b></h1>

  <% if @psychic.weekly_schedule.any? %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <% week_days_from_today.each do |week_day| %>
            <th><%= week_day %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% ScheduleTable::HOURS.each_with_index do |hour, index| %>
          <tr>
            <td><%= hour %></td>
            <% @table.row_by_hour(index).each do |schedule| %>
                <% if schedule %>
                  <td class="psychic-available">
                    <span>Avail.</span>
                  </td>
                <% else %>
                  <td class="psychic-unavailable">N/A</td>
                <% end %>     
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="blank_state">
      No entries for this week's schedule.
    </div>
  <% end %>
</article>

<h3>This Week Schedule</h3>

<% if @psychic.weekly_schedule.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Start</th>
        <th>End</th>
      </tr>
    </thead>
    <tbody>
      <% @psychic.weekly_schedule.group_by(&:date).each_pair do |date, schedules| %>
        <tr>
          <td rowspan="<%= schedules.size %>" style="padding: 5px;">
            <%=l date, format: :schedule %>
          </td>
          <% schedules.each_with_index do |schedule, i| %>
            <% if i > 0 %>
              <tr>
                <td style="padding: 5px;"><%=l schedule.start_time %></td>
                <td style="padding: 5px;"><%=l schedule.end_time %></td>
              </tr>
            <% else %>
              <td style="padding: 5px;"><%=l schedule.start_time %></td>
              <td style="padding: 5px;"><%=l schedule.end_time %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="blank-state">
    No entries for this week's schedule.
  </div>
<% end %>