<article class="psychic-schedule">
  <h1>My Schedule for the Week of <b><%= Date.today.strftime("%B %d, %Y") %></b></h1>

  <% if @psychic.weekly_schedule.any? %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <% week_days_from_today.each do |week_day| %>
            <th><%= week_day %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% ScheduleTable::HOURS.each_with_index do |hour, index| %>
          <tr>
            <td><%= hour %></td>
            <% @table.row_by_hour(index).each do |schedule| %>
              <% if schedule %>
                <td class="psychic-available">
                  <div>
                    <span>Avail.</span>
                  </div>
                </td>
              <% else %>
                <td class="psychic-unavailable">N/A</td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="psychic-blank">
      No entries for this week's schedule.
    </div>
  <% end %>
