<section class="psychic-training small_container">
  <h2 class="section-title training-section-title">
    My IHP Training Content
  </h2>

  <table class="records">
    <thead>
      <th>Title</th>
      <th>Reviewed</th>
    </thead>

    <tbody>
      <% @training_items.each do |t| %>
        <tr>
          <td>
            <%= link_to t.title, t, target: "_training_item" %>
          </td>
          <td>
            <%= @psychic.training_reviewed?(t) ? "Yes" : "No" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
