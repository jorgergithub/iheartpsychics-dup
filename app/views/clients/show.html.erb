<div class="row-fluid">
  <div class="span12">
    Welcome back, <%= @client.first_name %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>Account info</h3>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <table class="table">
      <tbody>
        <tr><td>Minutes</td><td><%= @client.minutes %></td></tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>Phone numbers</h3>

    <% if @client.phones.any? %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Number</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @client.phones.each do |phone| %>
            <tr>
              <td>
                <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_client_phone_path(phone) %>
                <%= link_to '<i class="icon-remove"></i>'.html_safe, phone, :confirm => "Are you sure?", :method => "delete" %>
              </td>
              <td><%= phone.formatted_number %></td>
              <td><%= phone.desc %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="blank-state">
        No phones added yet.
      </div>
    <% end %>

    <%= link_to "Add new phone", new_client_client_phone_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>Calls</h3>

    <table class="table">
      <thead>
        <tr>
          <th>From</th>
          <th>Started</th>
          <th>Ended</th>
          <th>Status</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody>
        <% @client.calls.processed.each do |call| %>
          <tr>
            <td><%= call.from %></td>
            <td><%= call.parsed_start_time %></td>
            <td><%= call.parsed_end_time %></td>
            <td><%= call.status.capitalize %></td>
            <td class="right"><%= call.formatted_duration %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="row-fluid">
  <div class="span12">
    <h3>Preferred Psychics</h3>
  </div>
</div>
