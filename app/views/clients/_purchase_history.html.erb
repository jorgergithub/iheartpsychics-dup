<table class="records header">
  <thead>
    <tr>
      <th>Payment</th>
      <th>Amount</th>
      <th>Date Used</th>
      <th>Confirmation #</th>
    </tr>
  </thead>
</table>

<div class="scrollbar_table">
  <div class="scrollbar"><div class="track"><div class="thumb"><div class=  "end"></div></div></div></div>
  <div class="viewport">
    <div class="overview">

      <table class="records">
        <tbody>
          <% @credits.each do |credit| %>
            <tr>
              <td><%= credit.payment %></td>
              <td><%= number_to_currency credit.amount %></td>
              <td><%= credit.parsed_date_only %></td>
              <td>#<%= credit.id %></td>
            </tr>                  
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>