<div id="pin_modal" class="modal medium">
  <header>
    <h1>My Pin</h1>
  </header>

  <div class="modal-body">
    <%= form_for :pin do |f| %>
      <div class="reset_field">
        <%= f.label :pin, "My pin" %>
        <%= f.text_field :pin %>
        <%= link_to image_tag("modal/reset_btn.png"), "#", class: "reset_form" %>
      </div>
    <% end %>
  </div>

  <footer>
    <%= image_submit_tag "modal/save_btn.png" %>
    <%= link_to image_tag("modal/cancel_btn.png"), "#", class: "close-button" %>
  </footer>
</div>