<section id="psychic-details">
  <div class="row-fluid">
    <div class="span12">
      <h3>
        <%= @psychic.alias_name %>
        <span>| Ext. <%= @psychic.extension %></span>
      </h3>

      <div class="specialties">
        <% if @psychic.specialties.present? %>
          <b>Expert in:</b>
          <%= @psychic.specialties.titleize %>
        <% end %>
      </div>

      <div class="price">
        <% if @psychic.price.present? %>
          <b>Price (Per Minute):</b>
          <%= number_to_currency @psychic.price %>
        <% end %>
      </div>

      <div class="ratings">
        <% if @psychic.rating %>
          <%= rating_for @psychic, empty_icon: "icon-star-empty" %>
        <% end %>
      </div>

      <div class="about">
        <div class="title">About <%= @psychic.alias_name %></div>
        <div class="body"><%= @psychic.about %></div>
      </div>
    </div>
  </div>

  <% if @psychic.reviews.any? %>
    <% @psychic.reviews.each_slice(3) do |reviews| %>
      <div class="row-fluid reviews-title">
        <div class="span12">
          <h4>Other Customers Testimonials</h4>
        </div>
      </div>

      <div class="row-fluid reviews">
        <div class="span12">
          <% reviews.each do |review| %>
            <div class="review span4">
              <div class="author">
                <%= review.client.full_name %>,
                <%= review.created_at.strftime("%B %-d, %Y") %>
              </div>

              <div class="text">
                <%= review.text %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @psychic.featured_review %>
      <div class="row-fluid reviews">
        <div class="featured-review span12">

          <div class="text">
            <p><span><%= @psychic.featured_review.text %></span></p>
          </div>

          <div class="author">
            <%= @psychic.featured_review.client.full_name %>,
            <%= @psychic.featured_review.created_at.strftime("%B %-d, %Y") %>
          </div>

          <div class="rating">
            <% @psychic.featured_review.rating.times do %>
              <i class="icon-heart"></i>
            <% end %>
          </div>
        </div>
      <% end %>
  <% end %>
</section>
