<div class="row-fluid">
  <div class="span12">
    <h3>Edit psychic</h3>
  </div>
  <div class="span12">
    <ul class="nav nav-tabs" id="tabs">
      <li class="active" data-toggle="tab"><%= link_to "Psychic", "#form" %></li>
      <li data-toggle="tab"><%= link_to "Reviews (#{@psychic.reviews.count})", "#reviews" %></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="form">
        <%= render "form", object: @psychic %>
      </div>

      <div class="tab-pane" id="reviews">
        <% @psychic.reviews.each do |review| %>
          <div class="review">
            <div class="pull-right">
              <% review.rating.times do %><i class="icon-heart"></i><% end %>
            </div>
            <b><%= link_to review.client.full_name, edit_admin_client_path(review.client) %></b>
            in
            <%= format_date review.created_at %>
            <div class="well">
              <%= review.text %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
