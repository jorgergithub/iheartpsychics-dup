<div class="row-fluid">
  <div class="span12">
    <h3>Edit psychic</h3>
  </div>
  <div class="span12">
    <ul class="nav nav-tabs" id="tabs">
      <li class="active"><%= link_to "Psychic", "#form", :data => { :toggle => 'tab'} %></li>
      <li><%= link_to "Employment", "#employment", :data => { :toggle => 'tab'}  %></li>
      <li><%= link_to "Reviews (#{@psychic.reviews.count})", "#reviews", :data => { :toggle => 'tab'}  %></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="form">
        <%= render "form", object: @psychic %>
      </div>

      <div class="tab-pane" id="employment">
        <%= render "employment", object: @psychic %>
      </div>

      <div class="tab-pane" id="reviews">
        <%= render "admin/reviews", target: @psychic %>
      </div>
    </div>
  </div>
</div>
