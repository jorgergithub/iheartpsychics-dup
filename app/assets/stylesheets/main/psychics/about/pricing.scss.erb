#psychic-details section.psychic-pricing {
  background: #e4ecf0;
  border: 1px solid #ccd7dd;
  -webkit-border-radius: 7px;
  -moz-border-radius: 7px;
  border-radius: 7px;
  font-size: 0;

  table {
    width: 100%;
    table-layout: fixed;
  }

  td {
    padding-top: 25px;
    padding-bottom: 40px;
    padding-left: 20px;
    padding-right: 20px;
  }

  td + td {
    border-left: 1px solid #ccd7dd;
  }

  h1 {
    font-size: 13px;
    color: #687689;
    text-align: center;
  }

  div.label {
    line-height: 1;
    position: absolute;
    margin-left: 90px;
    margin-top: -100px;
    font-size: 24px;
    color: white;
    width: 60px;
    height: 60px;
    text-align: center;
    background-image: url(<%= asset_path "psychics/label_bg.png" %>);
  }

  div.label span {
    width:60px;
    height: 60px;
    vertical-align: middle;
    display: table-cell;
  }


  div.label span small {
    display: block;
    font-size: 14px;
  }

  td img {
    margin-top: 40px;
    margin-left: 5px;
  }
}