#psychic-details section.psychic-similar {
  font-size: 0px;

  article {
    width: 288px;
    display: inline-block;
    border: 1px solid #e1e6e9;
    font-size: 20px;

    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
  }

  article + article {
    margin-left: 50px;
  }

  article > header{
    text-align: center;
    height: 180px;
    background-image: url(<%= image_path("psychics/banner_love.png") %>);
  }

  img {
    margin-top: 10px;
    width: 150px;
    border: 5px solid white;
    -webkit-border-radius: 150px;
    -moz-border-radius: 150px;
    border-radius: 150px;
  }

  div.content header h1 {
    font-size: 26px;
    color: #606d82;
  }

  div.content header > div {
    display: inline-block;
    vertical-align: top;
  }

  div.content {
    padding: 20px;
  }

  div.content header {
    margin-bottom: 20px;
  }

  div.content header div.psychic-similar-left {
    padding-right: 10px;
    width: 145px;
    border-right: 1px solid #cdd6db;
  }

  div.content header div.psychic-similar-right {
    padding-left: 10px;
    width: 77px;
    text-align: center;
  }

  div.content header div.psychic-similar-right .psychic-similar-price {
    color: #606d82;
    font-size: 22px;
    font-weight: bold;

    & small { 
      color: #cdd1d7;
      font-size: 18px;
      font-weight: normal;
    }
  }

  div.content header div.psychic-similar-right .psychic-similar-ext {
    color: #cdd1d7;
    font-size: 16px;

    & span { 
      color: #606d82; 
      font-weight: bold; 
    }
  }
}