#psychic-details {
  .container_12 {
    width: 970px;
  }

  & .container_12 > section,
  & .container_12 > article {
    margin: 100px 0px;
  }
}

#psychic-details article.psychic-profile {
  font-size: 0;

  h1 {
    font-size: 35px;
    color: #5d687a;
  }

  .psychic-details-avatar {
    display: inline-block;
    width: 270px;
  }

  .psychic-details-avatar img {
    -webkit-border-radius: 150px;
    -moz-border-radius: 150px;
    border-radius: 150px;
  }

  a.fav_button {
    position: absolute;
    margin-top: 228px;
    margin-left: -170px;
  }

  div.psychic-profile {
    width: 670px;
    vertical-align: top;
    margin-left: 30px;
    display: inline-block;
  }

  p {
    font-size: 20px;
    margin: 30px 0px;
    color: #8590a1;
  }

  p.psychic-expert, p.psychic-ext {
    margin-top: 0px;
    display: inline-block;
    font-size: 22px;
    color: #687689;
  }

  p.psychic-ext {
    margin-left: 50px;
  }
}

#psychic-details section.psychic-pricing {
  background: #e4ecf0;
  border: 1px solid #ccd7dd;
  -webkit-border-radius: 7px;
  -moz-border-radius: 7px;
  border-radius: 7px;
  font-size: 0;

  article {
    width: 152px;
    display: inline-block;
    padding-top: 25px;
    padding-bottom: 40px;
    padding-left: 20px;
    padding-right: 20px;
  }

  article + article {
    border-left: 1px solid #ccd7dd;
  }

  h1 {
    font-size: 13px;
    color: #687689;
    text-align: center;
  }

  div.label {
    line-height: 1;
    position: absolute;
    margin-left: 90px;
    margin-top: -100px;
    font-size: 24px;
    color: white;
    width: 60px;
    height: 60px;
    text-align: center;
    background-image: url(<%= asset_path "psychics/label_bg.png" %>);
  }

  div.label span {
    width:60px;
    height: 60px;
    vertical-align: middle;
    display: table-cell;
  }


  div.label span small {
    display: block;
    font-size: 14px;
  }

  article img {
    margin-top: 40px;
    margin-left: 5px;
  }
}

#psychic-details article.psychic-schedule {
  h1 {
    font-size: 35px;
    font-weight: 300;
    color: #5d687a;
    text-align: center;
    margin-bottom: 50px;
    b { color: black; }
  }

  table {
    width: 100%;
    color: white;
  }

  table td.pscychic-unavailable {
    color: #8590a1;
  }

  table tr td:first-child {
    width: 190px;
  }

  table thead tr th {
    background: #af00a5;
    font-size: 24px;
    color: white;
  }

  table tbody tr td {
    font-size: 22px;
  }

  table thead tr:first-child th:first-child {
    -webkit-border-top-left-radius: 7px;
    -moz-border-radius-topleft: 7px;
    border-top-left-radius: 7px;
  }

  table thead tr:first-child th:last-child {
    -webkit-border-top-right-radius: 7px;
    -moz-border-radius-topright: 7px;
    border-top-right-radius: 7px;
  }

  table tbody tr:nth-child(odd) {
    background: #f3f4f6;
  }

  table tbody tr td:first-child {
    background: #bac4d2;
  }

  table tbody tr:nth-child(odd) td:first-child {
    background: #dbe2ed;
  }

  table tbody tr:last-child td:first-child {
    -webkit-border-bottom-left-radius: 7px;
    -moz-border-radius-bottomleft: 7px;
    border-bottom-left-radius: 7px;
  }

  table tbody tr:last-child td:last-child {
    -webkit-border-bottom-right-radius: 7px;
    -moz-border-radius-bottomright: 7px;
    border-bottom-right-radius: 7px;
  }

  table thead tr:first-child th:first-child {
    -webkit-border-top-left-radius: 7px;
    -moz-border-radius-topleft: 7px;
    border-top-left-radius: 7px;
  }

  table td, table th {
    text-align: center;
    padding: 30px 0px;
    font-weight: 100;
  }
}