#psychic-details {
  .container_12 {
    width: 970px;
  }
}

#psychic-details article.psychic-profile {
  margin: 100px 0px;
  font-size: 0;

  h1 {
    font-size: 35px;
    color: #5d687a;
  }

  .psychic-details-avatar {
    display: inline-block;
    width: 270px;
  }

  .psychic-details-avatar img {
    -webkit-border-radius: 150px;
    -moz-border-radius: 150px;
    border-radius: 150px;
  }

  a.fav_button {
    position: absolute;
    margin-top: 228px;
    margin-left: -170px;
  }

  div.psychic-profile {
    width: 670px;
    vertical-align: top;
    margin-left: 30px;
    display: inline-block;
  }

  p {
    font-size: 20px;
    margin: 30px 0px;
    color: #8590a1;
  }

  p.psychic-expert, p.psychic-ext {
    margin-top: 0px;
    display: inline-block;
    font-size: 22px;
    color: #687689;
  }

  p.psychic-ext {
    margin-left: 50px;
  }
}

#psychic-details section.psychic-pricing {
  background: #e4ecf0;
  border: 1px solid #ccd7dd;
  -webkit-border-radius: 7px;
  -moz-border-radius: 7px;
  border-radius: 7px;
  font-size: 0;

  article {
    width: 152px;
    display: inline-block;
    padding-top: 25px;
    padding-bottom: 40px;
    padding-left: 20px;
    padding-right: 20px;
  }

  article + article {
    border-left: 1px solid #ccd7dd;
  }

  h1 {
    font-size: 13px;
    color: #687689;
    text-align: center;
  }

  div.label {
    line-height: 1;
    position: absolute;
    margin-left: 90px;
    margin-top: -100px;
    font-size: 24px;
    color: white;
    width: 60px;
    height: 60px;
    text-align: center;
    background-image: url(<%= asset_path "psychics/label_bg.png" %>);
  }

  div.label span {
    width:60px;
    height: 60px;
    vertical-align: middle;
    display: table-cell;
  }


  div.label span small {
    display: block;
    font-size: 14px;
  }

  article img {
    margin-top: 40px;
    margin-left: 5px;
  }
}