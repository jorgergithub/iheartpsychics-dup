.horoscopes .container_12 {
  width: 970px;
}

.horoscopes #details {
  p {
    color: #8590a1;
  }

  h1 {
    color: #af00a5;
  }

  time {
    color: #5d687a;
  }

  aside h1 {
    color: #5d687a;
  }

  .lucky_numbers {
    li {
      font-size: 24px;
      width: 40px;
      height: 37px;
      text-align: center;
      padding-top: 3px;
      background-image: url(<%= image_path "signs/lucky_number_bg.png" %>);
      display: inline-block;
    }
  }
}