.horoscopes .container_12 {
  width: 970px;
}

.horoscopes #details {
  p {
    color: #8590a1;
  }

  h1 {
    font-weight: 300;
    color: #af00a5;
  }

  time {
    color: #5d687a;
    font-weight: 400;
  }

  aside h1 {
    color: #5d687a;
  }
}

.horoscopes #details article.sign {
  display:none;

  &.selected {
    display: block;
  }
  
  div.row {
    font-size: 0px;
    margin: 100px 0px;
  }

  div.row article {
    vertical-align: top;
    width: 468px;
    display: inline-block;
    font-size: 20px;
  }

  div.row article + article {
    margin-left: 30px;
  }

  h1 {
    font-size: 35px;
  }

  time {
    font-size: 24px;
  }

  p {
    padding: 40px 0px;
    font-size: 20px;
  }

  .lucky_numbers {
    text-align: center;

    h1 {
      font-size: 20px;
      margin-bottom: 25px;
      font-weight: 400;
    }

    li {
      font-size: 24px;
      width: 40px;
      height: 37px;
      text-align: center;
      padding-top: 3px;
      background-image: url(<%= image_path "signs/lucky_number_bg.png" %>);
      display: inline-block;
    }

    li + li {
      margin-left: 10px;
    }
  }

  article.friendship, article.love {
    text-align: center;

    h1 {
      font-size: 25px;
      margin-bottom: 50px;
    }

    img + img {
      margin-left: 30px;
    }
  }
}